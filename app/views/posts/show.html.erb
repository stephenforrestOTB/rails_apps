<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <%= will_paginate @comments %>
  <table>
    <th> COMMENT </th>
    <th> AUTHOR </th>
    <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.text %></td>
      <td><%= comment.user.username %></td>
    </tr>
    <% end %>
  </table>
  <%= link_to 'New Comment', new_post_comment_path(@post) %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
